rupture.scale =   0px  320px 550px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'


@import "https://fonts.googleapis.com/css?family=Ubuntu"
@import "https://fonts.googleapis.com/css?family=Dosis"
@import 'styl/*'

	
body
	margin 0
	padding 0
	font-family caviar dreams
	padding-top 50px

		
header
	width 100%
	height 50px
	background #000
	color hsl(0, 0%, 95%)
	position fixed
	top 0
	left 0
	z-index 100
	padding 0
	
	h1
		font-family Dosis, sans-serif
		margin-left 1px
		margin-top 4px
		margin-bottom 5px	
		float left		
	a
		font-family 'Ubuntu'
		text-decoration none

.container
	width 98%
	margin 0 auto
	max-width 960px
	
header
	.container
		display table
		
	height 62px

section
	width 100%
	margin-bottom 20px
	
footer
	padding 0.8em
	
	.footer-container
		display flex
		flex-flow wrap column
		justify-content center	

	p 
		font-size 16px
		text-align center
		
	.sociales
		display flex
		justify-content space-between
		width 100%
		max-width 400px
		text-align center
		font-size 38px
		margin 0 auto
		
		a 
			color #333
			text-decoration none
			